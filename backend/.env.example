# Server configuration
PORT=5000
NODE_ENV=development

# MongoDB connection
MONGO_URI=mongodb://localhost:27017/genera

# JWT Secret - MUST BE AT LEAST 32 CHARACTERS
# Generate with: openssl rand -base64 32 or node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# Example: Y2U4NmE5ZjQ3YjNkMjE4ZTkwNjc1YzRmOGQzYjJhMTY=
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-change-this-in-production
JWT_EXPIRE=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Session Secret - MUST BE AT LEAST 32 CHARACTERS
# Generate with: openssl rand -base64 32 or node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# Example: ZDJhMzE1Yjk4YzZlNzQwZjEyMzQ1Njc4OWFiY2RlZjA=
SESSION_SECRET=your-super-secret-session-key-minimum-32-characters-long-change-this-in-production

# Hugging Face API Token
# Get your token from: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=hf_your_huggingface_token_here

# Logging (optional, defaults to 'info' in production, 'debug' in development)
LOG_LEVEL=debug
